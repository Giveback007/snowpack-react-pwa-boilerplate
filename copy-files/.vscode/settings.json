{
  "debug.node.autoAttach": "on",
  "window.title": "${dirty} ${activeEditorMedium}${separator}${rootName}",
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "explorer.openEditors.visible": 0,
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "telemetry.enableCrashReporter": false,
  "workbench.editor.restoreViewState": true,
  "breadcrumbs.enabled": false,

  // -- EDITOR GENERAL -- //
  "editor.detectIndentation": true,
  "editor.insertSpaces": true,
  "editor.tabSize": 4,
  "editor.renderWhitespace": "selection",
  "editor.smoothScrolling": true,
  "editor.lineNumbers": "on",

  // -- CURSOR -- //
  "editor.cursorBlinking": "phase",
  "editor.cursorSmoothCaretAnimation": true,
  "editor.cursorStyle": "line",
  "editor.cursorSurroundingLines": 0, // ?
  "editor.cursorWidth": 2,

  // -- MINI MAP -- //
  "editor.minimap.renderCharacters": false,
  "editor.minimap.maxColumn": 200,
  "editor.minimap.showSlider": "always",
  "editor.minimap.side": "right",
  "editor.minimap.scale": 1,
  "editor.minimap.size": "fit",

  // -- EXTENSION: spywhere.guides -- //
  "guides.active.hideOnSelection": true,
  "guides.active.width": 3,
  "guides.active.expandBrackets": true,
  // "guides.stack.width": 1,
  "guides.normal.width": 0.5,
  "guides.stack.enabled": false,
  "guides.updateDelay": 0.15,
  "guides.overrideDefault": true,
  // "guides.active.expandBrackets": true,
  // "guides.active.enabled": true,
  // "guides.active.extraIndent": false,
  // "guides.active.gutter": false,

  // "telemetry.enableTelemetry": false,
  "editor.tokenColorCustomizations": {
      "textMateRules": [
        {
          "scope": [
            "entity.name.function",
            "support.function"
          ],
          "settings": {
            "fontStyle": "bold"
          }
        }
      ]
  },
  "cSpell.words": [
      "Unmount",
      "Vals",
      "Basemap",
      "Unmount",
      "bottomright",
      "defn",
      "devtool",
      "devtools",
      "postbuild",
      "redux"
  ],
  "editor.rulers": [80],
  "typescript.tsdk": "node_modules\\typescript\\lib",
  "debug.showInStatusBar": "never",
  "debug.toolBarLocation": "floating",
  "debug.openDebug": "neverOpen",
  "debug.inlineValues": true
}
